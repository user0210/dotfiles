#########################################################
##### >> layout << ######################################
#########################################################

# default layout:
set $layout 'AB=-370 BD=250 AC=130'
# autoload layout:
$exe i3fyra -l $layout

# layout manipulation:
$super+o	$exe i3fyra -l $layout
$super+g	layout toggle tabbed stacking splith splitv

$super+b	split h
$super+v	split v

$super+F11      fullscreen toggle

$super+F10	$exe polybar-msg cmd toggle

# i3fyra -a = autolayout (floating toggle)
$super+Shift+space $fyra -a

#########################################################
##### >> workspace << ###################################
#########################################################

$super+1 workspace 1
$super+2 workspace 2
$super+3 workspace 3

$super+Shift+1 move container to workspace 1
$super+Shift+2 move container to workspace 2
$super+Shift+3 move container to workspace 3

