#########################################################
##### >> Initialization << ##############################
#########################################################

workspace 1 output default

##### autostart
exec --no-startup-id exec compton --config /home/philipp/.config/compton/compton-i3.conf
exec --no-startup-id exec hsetroot -solid "#101010"
exec_always --no-startup-id exec $HOME/bin/polylaunch
exec_always --no-startup-id exec /home/philipp/bin/i3listen.py & 
# nagbar-platzhalter
# exec --no-startup-id exec i3-nagbar -t warning -m 'polybar placeholder'

##### variablen
set $mod   Mod1
set $super bindsym Mod1
set $exe   exec --no-startup-id exec
set $fyra  exec --no-startup-id exec i3fyra

set $dirl  h
set $dird  j
set $diru  k
set $dirr  l

#########################################################
##### >> settings << ####################################
#########################################################

show_marks no
floating_modifier Mod1
hide_edge_borders both
focus_follows_mouse no
workspace_auto_back_and_forth no

font pango:Fixedsys Excelsior 9

# with titlebar:
for_window [class="^.*"] border normal 1
# without titelbar:
# for_window [class="^.*"] border pixel 1

##### colors

set $base00 #002b36 
set $base01 #073642 
set $base02 #586e75 
set $base03 #657b83 
set $base04 #839496 
set $base05 #93a1a1 
set $base06 #eee8d5 
set $base07 #fdf6e3 
set $base08 #dc322f 
set $base09 #cb4b16 
set $base0A #b58900 
set $base0B #859900 
set $base0C #2aa198 
set $base0D #268bd2 
set $base0E #6c71c4 
set $base0F #d33682 

# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base05 $base0D $base00 $base0D $base0D
client.focused_inactive $base01 $base04 $base05 $base03 $base01
client.unfocused        $base01 $base04 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background       $base07

#########################################################
##### >> Panic << #######################################
#########################################################

$super+Shift+c	kill
$super+Shift+q	reload
$super+Shift+r	$exe /home/philipp/bin/restarter
$super+Shift+e	exec --no-startup-id i3-msg exit

#########################################################
##### >> programms << ###################################
#########################################################

##### terminals
#$super+Mod1+Return exec --no-startup-id i3-sensible-terminal
$super+Shift+Return		$exe i3run -i scratchterm -s -e 'st -n scratchterm -T scratchterm'
$super+Return	$exe st -n floatterm -e fish
#$super+Shift+Return	$exe i3run -i aterm -e 'st -n aterm -T aterm -e fish'
$super+Control+Return	$exe st -n tiledterm -e fish

##### Program launching
$super+f $exe i3run -i ranger -e 'st -n ranger -T ranger -e ranger'
$super+i $exe i3run -c Luakit -e 'luakit'
$super+t $exe /home/philipp/bin/themeselector

$super+r $exe rofi -show run -display-run ">>>" -theme bmenu

