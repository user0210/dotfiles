sudo zypper install-new-recommends

								##### setup

 ## stuff
sudo zypper in --recommends -t pattern wsl_gui wsl_systemd wsl_base
sudo zypper in --recommends -t pattern devel_C_C++ devel_basis devel_python3

 ## fonts
sudo nvim /etc/fonts/local.conf
	<fontconfig>
		<dir>/mnt/c/Windows/Fonts</dir>
	</fontconfig>

sudo zypper in --recommends -t pattern fonts
sudo zypper in libfreetype6

 ## packman-repo
sudo zypper addrepo -cfp 90 'https://ftp.gwdg.de/pub/linux/misc/packman/suse/openSUSE_Tumbleweed/' packman
sudo zypper refresh
sudo zypper dist-upgrade --from packman --allow-vendor-change
sudo zypper install --from packman ffmpeg gstreamer-plugins-{good,bad,ugly,libav} libavcodec-full

 ## wslu
sudo zypper addrepo https://download.opensuse.org/repositories/home:/wslutilities/openSUSE_Tumbleweed/home:wslutilities.repo
sudo zypper ref
sudo zypper in wslu
pip install wslpy

 ## ytfzf
