 ## shell
sudo zypper install fzf-zsh-completion fzf onefetch

 ## firefox and audio and video
sudo zypper in firefox pipewire-pulseaudio  pipewire-alsa mpv

 ## theming
sudo zypper addrepo https://download.opensuse.org/repositories/home:expeehaa/openSUSE_Tumbleweed/home:expeehaa.repo
sudo zypper addrepo https://download.opensuse.org/repositories/devel:languages:python/openSUSE_Tumbleweed/devel:languages:python.repo
sudo zypper refresh
sudo zypper install gradience adw-gtk3 adw-gtk3-dark
sudo zypper in python3-gobject-Gdk
curl -s -o- https://raw.githubusercontent.com/rafaelmardojai/firefox-gnome-theme/master/scripts/install-by-curl.sh | bash
sudo zypper install gsettings-desktop-schemas
gsettings set org.gnome.desktop.interface gtk-theme 'adw-gtk3-dark' && gsettings set org.gnome.desktop.interface color-scheme 'prefer-dark'

sudo zypper in QGnomePlatform-qt5 QGnomePlatform-qt6
--> export QT_QPA_PLATFORMTHEME=gnome
sudo zypper in qt6-platformtheme-gtk3 libqt5-qtstyleplugins qt5ct qt6ct
--> export QT_QPA_PLATFORMTHEME=qt5ct # qt6ct
sudo zypper in libqt5-qtwayland qt6-wayland libQt6Svg6
sudo zypper in breeze dconf-editor

