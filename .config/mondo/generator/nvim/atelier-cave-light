require('base16-colorscheme').setup({
    base00 = '#efecf4', base01 = '#e2dfe7', base02 = '#8b8792', base03 = '#7e7887',
    base04 = '#655f6d', base05 = '#585260', base06 = '#26232a', base07 = '#19171c',
    base08 = '#be4678', base09 = '#aa573c', base0A = '#a06e3b', base0B = '#2a9292',
    base0C = '#398bc6', base0D = '#576ddb', base0E = '#955ae7', base0F = '#bf40bf',
})

vim.cmd [[hi Normal ctermbg=none guibg=none]]
vim.cmd [[hi NormalNC ctermbg=none guibg=none]]
vim.cmd [[hi VertSplit guibg=none]]

vim.cmd [[hi ColorColumn guibg=#efecf4]] --also sets color for selected-tab-line !!!
vim.cmd [[hi NonText guibg=#efecf4]]
vim.cmd [[hi TabLineSel guibg=#DE6698]]
vim.cmd [[hi TabLine guibg=#e2dfe7]]
vim.cmd [[hi CursorLine guibg=#efecf4]]
vim.cmd [[hi CursorLineNr guifg=#19171c guibg=#efecf4 gui=bold]]

vim.cmd [[hi NvimTreeFolderIcon guifg=#576ddb]]
vim.cmd [[hi NvimTreeIndentMarker guifg=#26232a]]
vim.cmd [[hi NvimTreeNormal guifg=#585260 guibg=none]]
vim.cmd [[hi NvimTreeVertSplit guifg=none guibg=none]]
vim.cmd [[hi NvimTreeFolderName guifg=#576ddb guibg=none]]
