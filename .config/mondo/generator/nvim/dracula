require('base16-colorscheme').setup({
    base00 = '#282936', base01 = '#3a3c4e', base02 = '#4d4f68', base03 = '#626483',
    base04 = '#62d6e8', base05 = '#e9e9f4', base06 = '#f1f2f8', base07 = '#f7f7fb',
    base08 = '#ea51b2', base09 = '#b45bcf', base0A = '#00f769', base0B = '#ebff87',
    base0C = '#a1efe4', base0D = '#62d6e8', base0E = '#b45bcf', base0F = '#00f769',
})

vim.cmd [[hi Normal ctermbg=none guibg=none]]
vim.cmd [[hi NormalNC ctermbg=none guibg=none]]
vim.cmd [[hi VertSplit guibg=none]]

vim.cmd [[hi ColorColumn guibg=#282936]] --also sets color for selected-tab-line !!!
vim.cmd [[hi NonText guibg=#282936]]
vim.cmd [[hi TabLineSel guibg=#CA3192]]
vim.cmd [[hi TabLine guibg=#3a3c4e]]
vim.cmd [[hi CursorLine guibg=#282936]]
vim.cmd [[hi CursorLineNr guifg=#f7f7fb guibg=#282936 gui=bold]]

vim.cmd [[hi NvimTreeFolderIcon guifg=#62d6e8]]
