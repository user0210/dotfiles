vim.cmd [[hi NvimTreeVertSplit guifg=none guibg=none]]
vim.cmd [[hi NvimTreeFolderName guifg=#62d6e8 guibg=none]]
vim.cmd [[hi NvimTreeOpenedFolderName guifg=#62d6e8 guibg=none gui=bold,italic]]
vim.cmd [[hi NvimTreeEmptyFolderName guifg=#62d6e8 guibg=none gui=italic]]
