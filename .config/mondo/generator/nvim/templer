vim.cmd [[hi NvimTreeVertSplit guifg=none guibg=none]]
vim.cmd [[hi NvimTreeFolderName guifg=#5a9f9b guibg=none]]
vim.cmd [[hi NvimTreeOpenedFolderName guifg=#5a9f9b guibg=none gui=bold,italic]]
vim.cmd [[hi NvimTreeEmptyFolderName guifg=#919488 guibg=none gui=italic]]
