require('base16-colorscheme').setup({
    base00 = '#3B3228', base01 = '#534636', base02 = '#645240', base03 = '#7e705a',
    base04 = '#b8afad', base05 = '#d0c8c6', base06 = '#e9e1dd', base07 = '#f5eeeb',
    base08 = '#cb6077', base09 = '#d28b71', base0A = '#f4bc87', base0B = '#beb55b',
    base0C = '#7bbda4', base0D = '#8ab3b5', base0E = '#a89bb9', base0F = '#bb9584',
})

vim.cmd [[hi Normal ctermbg=none guibg=none]]
vim.cmd [[hi NormalNC ctermbg=none guibg=none]]
vim.cmd [[hi VertSplit guibg=none]]

vim.cmd [[hi ColorColumn guibg=#3B3228]] --also sets color for selected-tab-line !!!
vim.cmd [[hi NonText guibg=#3B3228]]
vim.cmd [[hi TabLineSel guibg=#AB4057]]
vim.cmd [[hi TabLine guibg=#534636]]
vim.cmd [[hi CursorLine guibg=#3B3228]]
vim.cmd [[hi CursorLineNr guifg=#f5eeeb guibg=#3B3228 gui=bold]]

vim.cmd [[hi NvimTreeFolderIcon guifg=#8ab3b5]]
vim.cmd [[hi NvimTreeIndentMarker guifg=#e9e1dd]]
