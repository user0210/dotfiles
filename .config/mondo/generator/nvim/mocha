vim.cmd [[hi NvimTreeVertSplit guifg=none guibg=none]]
vim.cmd [[hi NvimTreeFolderName guifg=#8ab3b5 guibg=none]]
vim.cmd [[hi NvimTreeOpenedFolderName guifg=#8ab3b5 guibg=none gui=bold,italic]]
vim.cmd [[hi NvimTreeEmptyFolderName guifg=#b8afad guibg=none gui=italic]]
vim.cmd [[hi NvimTreeGitIgnored guifg=#b8afad guibg=none gui=italic]]
vim.cmd [[hi NvimTreeImageFile guifg=#d0c8c6]]
