require('base16-colorscheme').setup({
    base00 = '#ecf4ee', base01 = '#dfe7e2', base02 = '#87928a', base03 = '#78877d',
    base04 = '#5f6d64', base05 = '#526057', base06 = '#232a25', base07 = '#171c19',
    base08 = '#b16139', base09 = '#9f713c', base0A = '#a07e3b', base0B = '#489963',
    base0C = '#1c9aa0', base0D = '#478c90', base0E = '#55859b', base0F = '#867469',
})

vim.cmd [[hi Normal ctermbg=none guibg=none]]
vim.cmd [[hi NormalNC ctermbg=none guibg=none]]
vim.cmd [[hi VertSplit guibg=none]]

vim.cmd [[hi ColorColumn guibg=#ecf4ee]] --also sets color for selected-tab-line !!!
vim.cmd [[hi NonText guibg=#ecf4ee]]
vim.cmd [[hi TabLineSel guibg=#D18159]]
vim.cmd [[hi TabLine guibg=#dfe7e2]]
vim.cmd [[hi CursorLine guibg=#ecf4ee]]
vim.cmd [[hi CursorLineNr guifg=#171c19 guibg=#ecf4ee gui=bold]]

vim.cmd [[hi NvimTreeFolderIcon guifg=#478c90]]
