vim.cmd [[hi NvimTreeNormal guifg=#526057 guibg=none]]
vim.cmd [[hi NvimTreeVertSplit guifg=none guibg=none]]
vim.cmd [[hi NvimTreeFolderName guifg=#478c90 guibg=none]]
vim.cmd [[hi NvimTreeOpenedFolderName guifg=#478c90 guibg=none gui=bold,italic]]
vim.cmd [[hi NvimTreeEmptyFolderName guifg=#5f6d64 guibg=none gui=italic]]
vim.cmd [[hi NvimTreeGitIgnored guifg=#5f6d64 guibg=none gui=italic]]
vim.cmd [[hi NvimTreeImageFile guifg=#526057]]
vim.cmd [[hi NvimTreeSpecialFile guifg=#9f713c]]
vim.cmd [[hi NvimTreeEndOfBuffer guifg=#ecf4ee guibg=none]]
