####################################################################
##### settings
####################################################################

map i recolor
map b toggle_statusbar

set sandbox none
set selection-clipboard clipboard
set adjust-open best-fit

set font "TerminessTTF Nerd Font 12"

####################################################################
##### colors
####################################################################

##### templer-colors
set notification-error-bg	"#f5f0e7"	# bg
set notification-error-fg	"#d02023"	# bright:red
set notification-warning-bg	"#f5f0e7"	# bg
set notification-warning-fg	"#9d6f00"	# bright:yellow
set notification-bg			"#f5f0e7"	# bg
set notification-fg			"#637200"	# bright:green

set completion-bg			"#d8d4cb"	# bg2
set completion-fg			"#2c3138"	# fg
set completion-group-bg		"#e7e2d9"	# bg1
set completion-group-fg		"#5a5f66"	# gray
set completion-highlight-bg	"#0073b5"	# bright:blue
set completion-highlight-fg	"#d8d4cb"	# bg2

# Define the color in index mode
set index-bg				"#d8d4cb"	# bg2
set index-fg				"#2c3138"	# fg
set index-active-bg			"#0073b5"	# bright:blue
set index-active-fg			"#d8d4cb"	# bg2

set inputbar-bg				"#f5f0e7"	# bg
set inputbar-fg				"#2c3138"	# fg

set statusbar-bg			"#d8d4cb"	# bg2
set statusbar-fg			"#2c3138"	# fg

set highlight-color			"#9d6f00"	# bright:yellow
set highlight-active-color	"#bf3e05"	# bright:orange

set default-bg				"#f5f0e7"	# bg
set default-fg				"#2c3138"	# fg
set render-loading			true
set render-loading-bg		"#f5f0e7"	# bg
set render-loading-fg		"#2c3138"	# fg

# Recolor book content's color
set recolor-lightcolor		"#f5f0e7"	# bg
set recolor-darkcolor		"#2c3138"	# fg
set recolor					true
set recolor-keephue			true			# keep original color
