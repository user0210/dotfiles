#!/bin/sh


audiosel pipe
#audiosel pulse

##### debugger ############################################
case "$1" in
	update)
youtube-dl --rm-cache-dir
rm /home/philipp/.config/mps-youtube/cache_py* 
if [ -t 0 ] ; then
    mpsyt set api_key ***REMOVED***
else
    st -e mpsyt set api_key ***REMOVED*** &
fi
exit 1
esac
############################################################


##### tmux-session #########################################
rm ~/.config/mps-youtube/cache_py*
if [ -t 0 ] ; then
    mpsyt "$@"
else
	if [ $# -eq 0 ]; then
		st -h -t tube -e /home/philipp/.config/zsh/tube/tmux
	else
		st -h -e mpsyt "$@" &
	fi
fi
############################################################
