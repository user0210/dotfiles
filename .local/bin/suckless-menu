#!/bin/sh

#export DISPLAY=:0.0

#Pipe erstellen
PIPE="/tmp/.pipe.tmp"
rm $PIPE
mkfifo $PIPE
exec 3<> $PIPE

#Yad Dialog erstellen
yad --notification --listen --command="xmenu.sh" --class suckless-menu <&3 & 

#Men체eintr채ge definieren
echo "menu:\
sag hallo...!notify-send "...halooo"|\
Onboard!onboard|\
PcManFM!pcmanfm|\
Terminal!st " >&3
#Icon des Men체buttons definieren
echo "icon:/home/philipp/.xfiles/icons/suckless_logo.svg" >&3
#Name des Men체s definieren
echo "tooltip:suckless-menu" >&3
