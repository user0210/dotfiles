#!/bin/sh

dir=$(pwd)
sess=$(tmux display-message -p '#S')

first_arg=$1
shift
rest_args=$@

tmux rename-session -t $sess swallowed-$sess
tmux set-option destroy-unattached off
tmux detach-client -E "cd $dir && $first_arg $rest_args && tmux attach -t swallowed-$sess \; set-option destroy-unattached \; rename-session -t swallowed-$sess $sess"

