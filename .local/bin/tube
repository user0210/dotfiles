#!/bin/sh


audiosel pipe
#audiosel pulse

##### debugger ############################################
case "$1" in
	update)
youtube-dl --rm-cache-dir
rm ${HOME}/.config/mps-youtube/cache_py* 2> /dev/null
if [ -t 0 ] ; then
    mpsyt set api_key ***REMOVED***
else
    st -e mpsyt set api_key ***REMOVED*** &
fi
exit 1
esac
############################################################


##### tmux-session #########################################
rm ${HOME}/.config/mps-youtube/cache_py* 2> /dev/null
if [ -t 0 ] ; then
    mpsyt "$@"
else
	if [ $# -eq 0 ]; then
		st -u -t tube -e ${HOME}/.config/zsh/tube/tmux
	else
		st -u -e mpsyt "$@" &
	fi
fi
############################################################
