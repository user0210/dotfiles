#!/bin/sh


API=$(<~/backup/API.txt)
audiosel pipe

##### debugger ############################################
case "$1" in update)
	youtube-dl --rm-cache-dir
	rm ${HOME}/.config/mps-youtube/cache_py* 2> /dev/null
	if [ -t 0 ] ; then
	    mpsyt set api_key $API
	else
	    st -e mpsyt set api_key $API &
	fi
	exit 1
esac
############################################################


##### tmux-session #########################################
rm ${HOME}/.config/mps-youtube/cache_py* 2> /dev/null
if [ -t 0 ] ; then
    mpsyt "$@"
else
	if [ $# -eq 0 ]; then
		#ZDOTDIR=/home/philipp/.config/tmux/shell/tube st -u -t tube -e zsh
		st -u -t tube -e bash --rcfile ~/.config/tmux/shell/tube/.bashrc
	else
		st -u -e mpsyt "$@" &
	fi
fi
############################################################
